<div class="ui checkbox" {{bind-attr style="category.colorData.colorStyle"}}>
  {{input type="checkbox" checked=task.completed}}
</div>
<div class="content">
  {{click-to-edit-text class="title" value=task.title editing=task.editing}}
  <div class="due-date">
    {{#if task.dueDate}}
      {{#if task.editingDueDate}}
        {{date-time-field date=task.dueDate done="endEditingDueDate"}}
      {{else}}
        <a href="#" class="overdue" {{action "editDueDate"}}>{{task.timeOverdue}} overdue</a>
        <div class="not-overdue">
          <a href="#" {{bind-attr style="category.colorData.colorStyle"}} {{action "editDueDate"}}>{{task.formattedDueDate}}</a>
        </div>
        <a href="#" class="delete" {{action "removeDueDate"}}>&times;</a>
      {{/if}}
    {{else}}
      <a href="#" class="add" {{bind-attr style="category.colorData.colorStyle"}} {{action "addDueDate"}}>Add due date</a>
    {{/if}}
  </div>
</div>
<div class="right icons">
  <a href="#" class="delete" {{action "delete"}}>&times;</a>
  <i class="handle content icon"></i>
</div>
